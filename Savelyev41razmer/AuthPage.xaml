<Page x:Class="Savelyev41razmer.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Savelyev41razmer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" FontFamily="Comic Sans MS"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Пароль" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" FontFamily="Comic Sans MS"></TextBlock>
        <TextBox Name="LoginTB" Grid.Row="0" Grid.Column="1" Height="30" Width="300" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20"></TextBox>
        <TextBox Name="PassTB" Grid.Row="1" Grid.Column="1" Height="30" Width="300" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20"></TextBox>
        <Button Name="GuestButton" Content="Войти как гость" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" Click="GuestButton_Click"></Button>
        <Button Name="LoginButton" Width="185" Content="Войти" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80, 20, 0, 0" Click="LoginButton_Click"></Button>


        <StackPanel Name="captchaTextBlock"  Orientation="Horizontal" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Margin="20" Visibility="Collapsed">
            <TextBlock Text="Captcha:" FontSize="20" FontFamily="Comic Sans MS"></TextBlock>
            <TextBlock Name="captchaOneWord" FontSize="22" Margin="30,0,0,0"></TextBlock>
            <TextBlock Name="captchaTwoWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,5,0,0"></TextBlock>
            <TextBlock Name="captchaThreeWord" FontSize="22" TextDecorations="Strikethrough"></TextBlock>
            <TextBlock Name="captchaFourWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,10,0,0"></TextBlock>
        </StackPanel>
        <TextBox Name="captchaTextBox" Grid.Row="2" Grid.Column="1" Width="150" Height="30" HorizontalAlignment="Left" Margin="20" Visibility="Collapsed"></TextBox>
       
    </Grid>
</Page>
